package 숙소어플;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JComboBox;
import javax.swing.JLabel;
import javax.swing.JTextArea;
import javax.swing.JTextField;

public class review {
	MyFrame my=new MyFrame();
	public review() {
		String[] hotelname= {"df","sg","dg"};
		my.setTitle("후기작성");
		//호텔 콤보박스
		JComboBox comboBox  = new JComboBox(hotelname);
		JTextArea textarea = new JTextArea();
		JLabel label = new JLabel("별점을 입력하세요 /n 5점 만점");
		JTextField jf =new JTextField("input");
		JButton write= new JButton("작성하기");
		JButton cancel = new JButton("취소하기");
		
		comboBox.addActionListener(new ActionListener() {
			
			@Override
			public void actionPerformed(ActionEvent e) {
				if(e.getSource()==comboBox) {
					System.out.println(comboBox.getSelectedItem());
				}
				
			}
		});
		
		comboBox.setBounds(90, 20, 300, 30);
		textarea.setBounds(90, 50, 300, 200);
		label.setBounds(90, 240, 150, );
		//별점입력
		jf.setBounds(260, 240, 150, 30);
		write.setBounds(90, 300, 150, 50);
		cancel.setBounds(260, 300, 150,50 );
		
		my.add(comboBox);
		my.add(label);
		my.add(textarea);
		my.add(comboBox);
		my.add(write);
		my.add(cancel);
		
	}
	
	
	
}
