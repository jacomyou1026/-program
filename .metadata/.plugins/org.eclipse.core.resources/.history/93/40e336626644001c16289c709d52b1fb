package 숙소어플;

import java.awt.Color;
import java.awt.Font;

import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JScrollPane;
import javax.swing.JSeparator;
import javax.swing.JTable;
import javax.swing.table.DefaultTableModel;

public class JTableses {
	public JTableses() {
		// TODO Auto-generated constructor stub
		MyFrame my =new MyFrame();
		my.setDefaultCloseOperation(my.DISPOSE_ON_CLOSE);
		//jpanel
		JPanel jp = new JPanel();
		jp.setBounds(0, 100, 500, 700);
		jp.setBackground(Color.LIGHT_GRAY);
		jp.setBounds(0, 100, 500, 700);

		jp.setLayout(null);
		JLabel label  =new JLabel("총 예매내역");
		label.setFont(new Font("고딕", Font.BOLD, 20));
		//총 예매내역
		label.setBounds(190, 8, 300, 100);
		my.add(label);
		
		//Jtable
		JTable table = null;
		Object[] columns = {"호텔명","객실정보","방문일자","후기작성"};
		String[][] tdata = {

				{ "1", "2", "3", "4"},

				{ "1", "1", "2", "3" },

				{ "2", "3", "3", "4" }};

		DefaultTableModel model = new DefaultTableModel(tdata,columns);
		table = new JTable(model);
		table.setAutoResizeMode(table.AUTO_RESIZE_ALL_COLUMNS);
		JScrollPane scrollphane = new JScrollPane(table);
		my.add(scrollphane);
		
	}
public static void main(String[] args) {
	new JTableses();
}
}
