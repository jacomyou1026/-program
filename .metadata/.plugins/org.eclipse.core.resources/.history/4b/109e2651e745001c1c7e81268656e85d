package 숙소어플;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JComboBox;
import javax.swing.JLabel;
import javax.swing.JOptionPane;
import javax.swing.JTextArea;
import javax.swing.JTextField;

public class Review {
	MyFrame my=new MyFrame();
	
	//나중에 구현(데이터 받아서 사용)
	String[] hotelname= {"df","sg","dg"};
	JComboBox comboBox  = new JComboBox(hotelname);
	JTextArea textarea = new JTextArea("리뷰를 작성해주세요.");
	JLabel label = new JLabel("별점 숫자입력(5점 만점)");
	JTextField jf =new JTextField("input");
	JButton write= new JButton("작성하기");
	
	
	public Review() {
		my.setTitle("후기작성");
		//comboBox(호텔명) -이벤트 구현
		comboBox.addActionListener(new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
				if(e.getSource()==comboBox) {
					System.out.println(comboBox.getSelectedItem());
				}
			}
		});
		
		ActionListener al =new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
				String s = e.getActionCommand();
				switch (s){
				case "작성하기":
					JOptionPane.showMessageDialog(null,"작성하였습니다.");
					break;
				}
			}
		};
		
		comboBox.setBounds(80, 30, 330, 30);
		textarea.setBounds(80, 100, 330, 200);
		label.setBounds(80, 350, 170, 20);
		//별점입력
		jf.setBounds(260, 350, 150, 30);
		write.setBounds(80, 410, 330, 50);
//		cancel.setBounds(260, 410, 150,50 );
		
		my.add(comboBox);
		my.add(label);
		my.add(textarea);
		my.add(jf);
		my.add(comboBox);
		my.add(write);
		
	}
	public static void main(String[] args) {
		new Review();
	}
	
	
}
